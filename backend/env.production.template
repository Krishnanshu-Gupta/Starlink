# =============================================================================
# ETHEREUM CONFIGURATION (YOUR TESTNET)
# =============================================================================

# Your Ethereum testnet RPC URL
ETH_RPC_URL=https://your-testnet-rpc-url.com

# Your Ethereum testnet chain ID
ETH_CHAIN_ID=11155111

# User wallet private key (for testing - replace with your test wallet)
USER_PRIVATE_KEY=your_user_private_key_here

# =============================================================================
# CONTRACT ADDRESSES (YOUR DEPLOYED CONTRACTS)
# =============================================================================

# Your deployed HTLC contract address
HTLC_CONTRACT_ADDRESS=your_htlc_contract_address_here

# Your deployed Resolver contract address
RESOLVER_CONTRACT_ADDRESS=your_resolver_contract_address_here

# =============================================================================
# RESOLVER 1 - ALPHA
# =============================================================================

# Resolver 1 Ethereum account
RESOLVER1_ETH_ADDRESS=your_resolver1_eth_address_here
RESOLVER1_ETH_KEY=your_resolver1_eth_private_key_here

# Resolver 1 Stellar account
RESOLVER1_STELLAR_ADDRESS=your_resolver1_stellar_address_here
RESOLVER1_STELLAR_KEY=your_resolver1_stellar_secret_key_here

# =============================================================================
# RESOLVER 2 - BETA
# =============================================================================

# Resolver 2 Ethereum account
RESOLVER2_ETH_ADDRESS=your_resolver2_eth_address_here
RESOLVER2_ETH_KEY=your_resolver2_eth_private_key_here

# Resolver 2 Stellar account
RESOLVER2_STELLAR_ADDRESS=your_resolver2_stellar_address_here
RESOLVER2_STELLAR_KEY=your_resolver2_stellar_secret_key_here

# =============================================================================
# RESOLVER 3 - GAMMA
# =============================================================================

# Resolver 3 Ethereum account
RESOLVER3_ETH_ADDRESS=your_resolver3_eth_address_here
RESOLVER3_ETH_KEY=your_resolver3_eth_private_key_here

# Resolver 3 Stellar account
RESOLVER3_STELLAR_ADDRESS=your_resolver3_stellar_address_here
RESOLVER3_STELLAR_KEY=your_resolver3_stellar_secret_key_here

# =============================================================================
# STELLAR CONFIGURATION (YOUR TESTNET)
# =============================================================================

# Your Stellar testnet horizon URL
STELLAR_HORIZON_URL=https://your-stellar-testnet-horizon.com

# Your Stellar testnet network passphrase
STELLAR_NETWORK_PASSPHRASE=your_stellar_testnet_passphrase_here

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

PORT=3001
CORS_ORIGIN=http://localhost:5174

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

NODE_ENV=production
ENABLE_REAL_TRANSACTIONS=true
ENABLE_SIGNATURE_VERIFICATION=true
ENABLE_AUTOMATED_BIDDING=true

# =============================================================================
# INSTRUCTIONS:
# =============================================================================
# 1. Copy this file to backend/.env
# 2. Replace all "your_*_here" values with your actual testnet credentials
# 3. Make sure all resolver accounts are funded with test tokens
# 4. Deploy the HTLC and Resolver contracts to your testnet
# 5. Update the contract addresses above
# 6. Never commit the .env file to version control
# =============================================================================